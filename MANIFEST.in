# User-facing files that should be in the source distribution

# Core package files
include README.md LICENSE NOTICE CONSTRAINTS.md
include CHANGELOG.md SECURITY.md TRADEMARK.md CONTRIBUTING.md
include pyproject.toml
include constraints.txt
include pytest.ini
include .yamllint
include audit_config.yaml

# Configs directory (for user templates and examples) - included via src/glassalpha/data/configs

# Example artifacts and configs (for quickstart and examples)
recursive-include artifacts *.joblib *.json
recursive-include src/glassalpha/data/configs *.yaml *.html *.json *.md

# Example project template (generated by `glassalpha quickstart` - not included in source distribution)

# Model files (for quickstart examples)
recursive-include models *.pkl

# Complete examples directory with notebooks and golden artifacts
recursive-include examples *.ipynb *.md
recursive-include examples *.html *.json *.py *.txt *.yaml

# Template configs (used by CLI --template flag)
recursive-include src/glassalpha/templates *.yaml *.md

# Report templates (HTML/CSS for audit generation)
recursive-include src/glassalpha/report/templates *.html *.css *.js *.txt

# Documentation files
recursive-include docs *.md

# Data configs (policy schemas, etc.) - exclude test configs
recursive-include src/glassalpha/data/configs *.yaml *.md
global-exclude test_*.yaml

# Constraints for reproducibility
recursive-include constraints *.txt

# Tests (users may want to run tests after installation)
recursive-include tests *.py *.yaml *.md

# Exclude development-only and temporary files
prune .ci
prune dev
prune scripts
prune site
prune venv
prune venv_test
prune notebook-test
prune temp-*
prune .vscode
prune .ai-scratch
exclude Makefile
exclude *.sh
exclude ci-template.yml
exclude .coveragerc*
exclude .pre-commit-config.yaml
exclude .dockerignore
exclude setup-git-aliases.sh
exclude *.bak
exclude temp-*
exclude Dockerfile
exclude DETERMINISM_IMPLEMENTATION_COMPLETE.md
exclude CI_DETERMINISM_SOLUTION.md
exclude CI_FIXES_ROUND2.md
exclude DETERMINISM_FIX_PLAN.md
exclude DETERMINISM_FIX_PROMPT.md
exclude SOLUTION_*.md
global-exclude test_*.html test_*.pdf test_*.pkl test_*.json
global-exclude *_simple_audit.html *_simple_audit.manifest.json
global-exclude malformed.yaml
