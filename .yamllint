extends: default

rules:
  # Allow longer lines in YAML files (GitHub Actions workflows need long run commands)
  # Disabled: Workflows legitimately need long lines for env vars and complex commands
  line-length: disable

  # GitHub Actions workflows use 2-space indentation
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false

  # Allow empty values in some contexts (GitHub Actions matrix)
  empty-values:
    forbid-in-block-mappings: false
    forbid-in-flow-mappings: false

  # GitHub Actions uses specific comment style
  comments-indentation: disable
  comments: disable

  # Allow trailing spaces in some contexts
  empty-lines:
    max-start: 2
    max-end: 1
    max: 2

  # GitHub Actions workflows need specific formatting
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1

  # Allow flow style for short arrays (using valid yamllint rule)
  # Note: flow-list-sequences is not a valid yamllint rule, removed to fix validation

  # GitHub Actions uses specific quoting style - quotes rule disabled to avoid configuration issues

  # GitHub Actions uses 'on:' keyword which triggers truthy warnings
  truthy:
    allowed-values: ["true", "false", "on"]
